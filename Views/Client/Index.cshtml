@model IEnumerable<CodingClub.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-dark table-hover table-repsonsive-md">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientFName)
                <a asp-action="Index" asp-route-sortOrder="@ViewData"[]>
                    <i class='fas fa-caret-up'></i>
                </a>
                <a asp-action="Index" asp-route-sortOrder="@ViewData"[]>
                    <i class='fas fa-caret-down'></i>
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientLName)
                <a asp-action="Index" asp-route-sortOrder="@ViewData"[]>
                    <i class='fas fa-caret-up'></i>
                </a>
                <a asp-action="Index" asp-route-sortOrder="@ViewData"[]>
                    <i class='fas fa-caret-down'></i>
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientEmail)
                <a asp-action="Index" asp-route-sortOrder="@ViewData"[]>
                    <i class='fas fa-caret-up'></i>
                </a>
                <a asp-action="Index" asp-route-sortOrder="@ViewData"[]>
                    <i class='fas fa-caret-down'></i>
                </a>
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientFName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientLName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientEmail)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClientId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>